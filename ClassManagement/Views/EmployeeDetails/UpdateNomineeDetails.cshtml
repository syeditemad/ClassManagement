@model ClassManagement_ModelLibrary.Class_Model.NomineeDetails

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form enctype="multipart/form-data" asp-action="UpdateNomineeDetails" asp-route-id="@Model.EmployeeId" onsubmit=" return jQueryAjaxPost(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NomineeName" class="control-label"></label>
                        <input asp-for="NomineeName" class="form-control" />
                        <span asp-validation-for="NomineeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NomineeImage" class="control-label"></label>
                        <img src= "@("~/image/"+Model.NomineeImage)" asp-append-version="true" width="85px;" height="85px;" />
                        @*<input asp-for="NomineeImage" class="form-control" />*@
                        <span asp-validation-for="NomineeImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="NomineeWork" class="control-label"></label>
                        <input asp-for="NomineeWork" class="form-control" />
                        <span asp-validation-for="NomineeWork" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        @Html.DropDownList("Gender", new List<SelectListItem>
                            {
                          new SelectListItem{ Text="Male", Value = "1" },
                          new SelectListItem{ Text="Female", Value = "2" },
                           new SelectListItem{Text="Transgender", Value="3"}
                                }, "Select Gender", htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DateofBirth" class="control-label"></label>
                        <input asp-for="DateofBirth" class="form-control" />
                        <span asp-validation-for="DateofBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AdhareCardNo" class="control-label"></label>
                        <input asp-for="AdhareCardNo" class="form-control" />
                        <span asp-validation-for="AdhareCardNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MobileNo" class="control-label"></label>
                        <input asp-for="MobileNo" class="form-control" />
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                    @*<div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="isAcitveded" /> @Html.DisplayNameFor(model => model.isAcitveded)
                        </label>
                    </div>*@
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
